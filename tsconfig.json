{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,

    // so that if your project isn't using TypeScript, it still has autocomplete
    "allowJs": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./build",
    // "outFile": "./build/NECos.js",
    // "sourceMap": true,

    "types": ["discord.js", "knex"]
  },

  "exclude": [
    "./node_modules/**/*",
    "config.example/**/*"
  ]
}
