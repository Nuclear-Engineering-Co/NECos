{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,

    "allowJs": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./build",

    "types": ["discord.js", "knex"]
  },

  "exclude": [
    "./node_modules/**/*",
    "config.example/**/*"
  ]
}
